Executable gloss-crystal
  Build-depends:
        base            == 4.8.*,
        gloss           == 1.10.*,
        gloss-raster    == 1.10.*
  Main-is:        Main.hs
  hs-source-dirs: raster/Crystal

  extensions:
        PatternGuards
        BangPatterns

  ghc-options:    
        -Wall -threaded -rtsopts -eventlog
        -Odph -fno-liberate-case
        -funfolding-use-threshold1000
        -funfolding-keeness-factor1000

 if flag(llvm)
  ghc-options:
        -fllvm -optlo-O3

        

